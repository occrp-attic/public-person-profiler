@model Quince.Admin.Core.Models.Pages.HomePageModel
@{
    ViewBag.Title = "Public Person Profiler Home Page";
    Layout = "~/Views/Shared/_PuperLayout.cshtml";
}
@Html.Partial("_SearchBar", "")


<div class="row">
    <div class="col-md-6">
        <!-- BEGIN PORTLET -->
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart theme-font hide"></i>
                    <span class="caption-subject font-blue-madison bold uppercase">Entities</span>
                </div>
            </div>
            <div class="portlet-body">
                @foreach (var entityType in Model.EntityTypes)
                {
                    <div>
                        <a href="@Url.Action("Browse", "Entity", new { id = entityType.Id })" class="primary-link">@entityType.Name (@entityType.Count)</a>
                    </div>
                }
            </div>
        </div>
        <!-- END PORTLET -->
    </div>
    <div class="col-md-6">
        <!-- BEGIN PORTLET -->
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart theme-font hide"></i>
                    <span class="caption-subject font-blue-madison bold uppercase">Relations</span>
                </div>

            </div>
            <div class="portlet-body">
                @foreach (var relationType in Model.RelationTypes)
                {
                    <div>
                        <a href="@Url.Action("Browse", "Relation", new {id= relationType.Id})" class="primary-link">@relationType.Name (@relationType.Count)</a>
                    </div>
                }
            </div>
        </div>
        <!-- END PORTLET -->
    </div>
</div>
