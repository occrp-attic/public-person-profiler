@model string
<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Index", "Search")" class="alert alert-warning alert-borderless">
            <div class="input-group">
                <div class="input-cont">
                    <input type="text" placeholder="Search..." value="@(Model??string.Empty)" name="query" class="form-control">
                </div>
                <span class="input-group-btn">
                    <button type="submit" class="btn green-haze">
                        Search &nbsp; <i class="m-icon-swapright m-icon-white"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>

